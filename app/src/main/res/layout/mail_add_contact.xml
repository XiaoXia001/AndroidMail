<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mail_add_contact"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.zjw.androidmail.MailAddContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#297DC6">

        <Button
            android:onClick="back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/title_button_back"
            android:text="返回"
            android:textColor="#fff"/>

        <TextView
            android:text="联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="choose"
            android:text="确定"
            android:background="@drawable/title_button_right"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"/>
    </LinearLayout>

    <ListView
        android:id="@+id/show_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
