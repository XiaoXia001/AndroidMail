<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mail_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/s_login_bg"
    tools:context="com.zjw.androidmail.LoginActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/login_bg_mask">

        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_h40"
            android:contentDescription="AndroidMail" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textColor="#101010"
                android:textColorHint="#928d8d"
                android:textSize="20dp"
                android:hint="Please input your mail"
                android:background="@drawable/login_input_top"
                android:imeOptions="actionNext"/>

            <Button
                android:id="@+id/clear_address"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_gravity="end"
                android:background="@drawable/login_input_del"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="1"
                android:textColor="#101010"
                android:textColorHint="#928d8d"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:textSize="20dp"
                android:hint="Please input password"
                android:imeOptions="actionDone"
                android:background="@drawable/login_input_bot"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/see_password"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:visibility="visible"
                android:background="@drawable/login_input_visible"/>

        </FrameLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <CheckBox
                android:id="@+id/remember_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"/>

            <CheckBox
                android:id="@+id/auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:layout_marginLeft="100dp"/>

        </FrameLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="登录"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#101"
            android:background="@drawable/button_login"/>

    </LinearLayout>

</LinearLayout>
